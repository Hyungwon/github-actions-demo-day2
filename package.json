{
  "name": "github-actions-demo-day2",
  "version": "2.0.0",
  "description": "GitHub Actions CI/CD 실습 프로젝트 - Day2 고급 기능",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "setup:env": "node scripts/setup-env.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "github-actions",
    "ci-cd",
    "docker",
    "postgresql",
    "redis",
    "nginx",
    "monitoring"
  ],
  "author": "Cloud Master Course",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "prom-client": "^15.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": false,
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 5000,
    "bail": 1,
    "verbose": false,
    "forceExit": true,
    "maxWorkers": 1,
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true
  }
}
